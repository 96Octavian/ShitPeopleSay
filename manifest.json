{

  "manifest_version": 2,
  "name": "Shit People Say",
  "version": "1.0",

  "description": "Replaces words or sentences with regexp defined strings.",

  "icons": {
    "48": "icons/check_circle_outline-24px.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["decentify.js"]
    }
  ]

}