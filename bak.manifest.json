{
    "manifest_version": 2,
    "name": "Shit People Say",
    "version": "1.0",
    "description": "Replaces words or sentences with regexp defined strings.",
    "icons": {
      "48": "check_circle_outline-24px.svg"
    },
    "permissions": [
      "webRequest",
      "<all_urls>"
    ],
    "browser_action": {
      "default_title": "Add regexp"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "decentify.js"
        ]
      }
    ],
    "web_accessible_resources": [
      "paste.json"
    ],
    "applications": {
      "gecko": {
        "id": "gogol.logog@hotmail.it"
      }
    }
  }